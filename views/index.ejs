<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Smart Todo</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>

    <div class="navbar">
      <div class="navbar-text">
        <h1>Smart TODO List</h1>
      </div>
    </div>

    <div class="container">
      <form class="input-group">
        <input class="form-control todo-item" placeholder="Add a ToDo!">
        </input>
        <button class="btn" type="submit">Add</button>
      </form>
    </div>

    <div class="container">
      <div class="row align-items-center categories">
        <div class="col read-list">To Read
        </div>
        <div class="col watch-list">To Watch
        </div>
        <div class="col buy-list">To Buy
        </div>
        <div class="col eat-list">To Eat
        </div>
      </div>
    </div>

  </body>
</html>
