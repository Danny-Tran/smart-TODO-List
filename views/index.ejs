<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Smart Todo</title>

    <!-- required for bootstrap responsive view -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- layout style sheet -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- stylesheet for item list container -->
    <link rel="stylesheet" href="/styles/categories.css" type="text/css" />

    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/navbar-toggle.js"></script>
  </head>

  <body>
    <!-- page header -->
    <header class="container">
      <h1>Smart TODO List</h1>
      <button class="btn navbar-toggle" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        Nav
      </button>
      <nav class="collapse" id="navbar">
        <% include ./partials/_navbar %>
      </nav>
    </header>


    <!-- add item input -->
    <div class="container add-item">
      <form class="input-group">
        <input class="form-control todo-item" placeholder="Add a ToDo!">
        <button class="btn" type="submit">Add</button>
      </form>
    </div>

    <!-- main container with categories and lists -->
    <div class="container">
      <div class="row align-items-center categories">
        <!-- to read list column -->
        <div class="col read-list">
          <button class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#read-collapse" aria-expanded="false" aria-controls="read-collapse"/>
            To Read
          </button>
            <ul class="list-group read-items">
              <li class="list-group-item">
                <label class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input">
                  <span class="custom-control-indicator"></span>
                  Thing to read
                </label>
              </li>
              <li class="list-group-item">
                <label class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input">
                  <span class="custom-control-indicator"></span>
                  Harry Potter
                </label>
              </li>
            </ul>
        </div>

        <!-- to watch list column -->
        <div class="col watch-list">
          <h5>To Watch</h5>
          <div class="watch-items">
            <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Thing to watch
            </label>
          </div>
        </div>
        <!-- to buy list column -->
        <div class="col buy-list">
          <h5>To Buy</h5>
          <div class="buy-items">
            <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Thing to buy
            </label>
          </div>
        </div>
        <!-- to eat list column -->
        <div class="col eat-list">
          <h5>To Eat</h5>
          <div class="eat-items">
            <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Thing to eat
            </label>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
